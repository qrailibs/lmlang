{
    "name": "lmlang-vscode",
    "displayName": "Language support for LML",
    "description": "Adding support for the `.lml` files: syntax highlighting, live language server with live errors and intellisense.",
    "version": "1.0.0",
    "publisher": "qrai",
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:lmlang"
    ],
    "engines": {
        "vscode": "^1.70.0"
    },
    "scripts": {
        "package": "vsce package --no-dependencies",
        "build": "tsup"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/qrailibs/lmlang.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "dependencies": {
        "@lmlang/core": "workspace:*",
        "js-yaml": "^4.1.1",
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.11",
        "vscode-uri": "^3.1.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.70.0",
        "@vscode/vsce": "^3.7.1",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "lmlang",
                "aliases": [
                    "LMLang",
                    "lml"
                ],
                "extensions": [
                    ".lml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lmlang",
                "scopeName": "source.lml",
                "path": "./syntaxes/lmlang.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.javascript": "javascript",
                    "meta.embedded.block.python": "python",
                    "meta.embedded.block.shell": "shellscript"
                }
            }
        ]
    }
}
