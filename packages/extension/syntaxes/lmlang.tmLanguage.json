{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "LMLang",
    "scopeName": "source.lml",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#runtime-blocks"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#properties"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "begin": "//",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.lml"
                        }
                    },
                    "end": "$",
                    "name": "comment.line.double-slash.lml"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.lml"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.lml"
                        }
                    },
                    "name": "string.quoted.double.lml"
                },
                {
                    "begin": "'",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.lml"
                        }
                    },
                    "end": "'",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.lml"
                        }
                    },
                    "name": "string.quoted.single.lml"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b(import|from|return)\\b",
                    "name": "keyword.control.lml"
                },
                {
                    "match": "\\b(typeof)\\b",
                    "name": "keyword.operator.word.lml"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "match": "\\b(str|int|dbl|bool|obj|nil|func|err|void|unknown)\\b",
                    "name": "storage.type.lml"
                },
                {
                    "match": "\\b(array)\\b",
                    "name": "storage.type.lml"
                },
                {
                    "match": "\\[|\\]",
                    "name": "punctuation.definition.type.lml"
                },
                {
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
                    "name": "entity.name.type.class.lml"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "match": "\\b(true|false)\\b",
                    "name": "constant.language.boolean.lml"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "match": "\\b\\d+(\\.\\d+)?\\b",
                    "name": "constant.numeric.lml"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "match": "(\\+|\\-|\\*|\\/|=|~)",
                    "name": "keyword.operator.lml"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "match": "\\.|,|;|\\(|\\)|\\{|\\}",
                    "name": "punctuation.separator.lml"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
                    "name": "variable.other.lml"
                }
            ]
        },
        "runtime-blocks": {
            "patterns": [
                {
                    "begin": "(<)(js|javascript|ts|typescript|node)(\\b)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        }
                    },
                    "end": "(</)(\\2)(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        },
                        "3": {
                            "name": "punctuation.definition.tag.end.lml"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "\\G",
                            "end": "(>)",
                            "endCaptures": {
                                "1": {
                                    "name": "punctuation.definition.tag.end.lml"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "#tag-attributes"
                                }
                            ]
                        },
                        {
                            "include": "source.ts"
                        },
                        {
                            "include": "source.js"
                        }
                    ]
                },
                {
                    "begin": "(<)(py|python)(\\b)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        }
                    },
                    "end": "(</)(\\2)(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        },
                        "3": {
                            "name": "punctuation.definition.tag.end.lml"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "\\G",
                            "end": "(>)",
                            "endCaptures": {
                                "1": {
                                    "name": "punctuation.definition.tag.end.lml"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "#tag-attributes"
                                }
                            ]
                        },
                        {
                            "include": "source.python"
                        }
                    ]
                },
                {
                    "begin": "(<)(bash|shell)(\\b)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        }
                    },
                    "end": "(?:\\s*)(</)(bash|shell)(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        },
                        "3": {
                            "name": "punctuation.definition.tag.end.lml"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "\\G",
                            "end": "(>)",
                            "endCaptures": {
                                "1": {
                                    "name": "punctuation.definition.tag.end.lml"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "#tag-attributes"
                                }
                            ]
                        },
                        {
                            "include": "source.shell"
                        }
                    ]
                },
                {
                    "begin": "(<)([a-zA-Z_][a-zA-Z0-9_]*)(\\b)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        }
                    },
                    "end": "(</)(\\2)(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.lml"
                        },
                        "2": {
                            "name": "entity.name.tag.lml"
                        },
                        "3": {
                            "name": "punctuation.definition.tag.end.lml"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "\\G",
                            "end": "(>)",
                            "endCaptures": {
                                "1": {
                                    "name": "punctuation.definition.tag.end.lml"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "#tag-attributes"
                                }
                            ]
                        },
                        {
                            "name": "string.unquoted.embedded.lml",
                            "match": "."
                        }
                    ]
                }
            ]
        },
        "tag-attributes": {
            "patterns": [
                {
                    "match": "([a-zA-Z_][a-zA-Z0-9_]*)(=)",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name.lml"
                        },
                        "2": {
                            "name": "punctuation.separator.key-value.lml"
                        }
                    }
                },
                {
                    "begin": "\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.begin.lml"
                        }
                    },
                    "end": "\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.end.lml"
                        }
                    },
                    "patterns": [
                        {
                            "include": "source.lml"
                        }
                    ]
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "(\\.)\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": {
                            "name": "punctuation.separator.lml"
                        },
                        "2": {
                            "name": "entity.name.function.member.lml"
                        }
                    }
                },
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "name": "entity.name.function.lml"
                }
            ]
        },
        "properties": {
            "patterns": [
                {
                    "match": "(\\.)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "punctuation.separator.lml"
                        },
                        "2": {
                            "name": "variable.other.property.lml"
                        }
                    }
                }
            ]
        }
    }
}
